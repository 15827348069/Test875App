<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/blue_5</item>
        <item name="colorPrimaryDark">@color/blue_15</item>
        <item name="colorAccent">@color/gold</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--activity公用的style-->
    <style name="activityPublicStyle" parent="@style/AppTheme">
        <!--默认隐藏软件盘-->
        <item name="android:windowSoftInputMode">stateHidden</item>
        <!--屏幕的方向设置为竖屏-->
        <item name="android:screenOrientation">portrait</item>
        <!--设置configChanges-->
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
        <!--设置toolBar左边无标题-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--输入editText属性-->
        <item name="android:textColorHint">@color/black_3</item>
        <item name="colorControlNormal">@color/white_grey</item>
        <item name="colorControlActivated">@color/blue_6</item>
        <item name="colorControlHighlight">@color/blue_6</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>