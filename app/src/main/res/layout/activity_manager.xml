<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ManagerActivity">

    <include layout="@layout/normal_toolbar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/manageTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="@dimen/dp_2"
        app:tabMinWidth="@dimen/dp_120"
        app:tabMode="fixed"
        app:tabRippleColor="@color/blue_6"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:tabTextColor="@color/black_dd" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/addManagerBtn"
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_37"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_5"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_add_manager"
        tools:ignore="VectorDrawableCompat" />

    <android.support.v4.view.ViewPager
        android:id="@+id/managePg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/manageTab" />

</RelativeLayout>