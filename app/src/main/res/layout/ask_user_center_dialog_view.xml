<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_line"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_25">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/please_select_verify_method"
            android:textColor="@color/black_0"
            android:textSize="@dimen/sp_17" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/fingerRadioButton"
                style="@style/user_center_checkBox_style"
                android:text="@string/finger" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/faceRadioButton"
                style="@style/user_center_checkBox_style"
                android:layout_marginStart="@dimen/dp_25"
                android:text="@string/face" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/cardRadioButton"
                style="@style/user_center_checkBox_style"
                android:layout_marginStart="@dimen/dp_25"
                android:text="@string/card_verify" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/pwRadioButton"
                style="@style/user_center_checkBox_style"
                android:layout_marginStart="@dimen/dp_25"
                android:text="@string/pw_verify" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="0.999"
            android:background="@drawable/btn_press_bg"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black_0"
            android:textSize="@dimen/sp_17" />

        <View
            android:layout_width="@dimen/dp_0_8"
            android:layout_height="match_parent"
            android:layout_weight="0.002"
            android:background="@color/common_line" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/positiveBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="0.999"
            android:background="@drawable/btn_press_bg"
            android:gravity="center"
            android:text="@string/positive"
            android:textColor="@color/blue_6"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

</LinearLayout>