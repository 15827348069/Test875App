<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ServerSetActivity">

    <include
        android:id="@+id/topBar"
        layout="@layout/normal_toolbar" />

    <RelativeLayout
        android:id="@+id/ipAddressServer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/shape_gray_8_radius">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_14"
            android:text="@string/ip_address"
            android:textColor="@color/black_0"
            android:textColorHint="@color/white_8a"
            android:textSize="@dimen/sp_16" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ipAddressServerValue"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@null"
            android:gravity="end"
            android:textColor="@color/black_5"
            android:textSize="@dimen/sp_14"
            tools:ignore="RelativeOverlap"
            tools:text="1248035803" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/portNo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/shape_gray_8_radius">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_14"
            android:text="@string/port_no"
            android:textColor="@color/black_0"
            android:textColorHint="@color/white_8a"
            android:textSize="@dimen/sp_16" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ipAddressValue"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@null"
            android:gravity="end"
            android:textColor="@color/black_5"
            android:textSize="@dimen/sp_14"
            tools:ignore="RelativeOverlap"
            tools:text="8080" />

    </RelativeLayout>
</LinearLayout>