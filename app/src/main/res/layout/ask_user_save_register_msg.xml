<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_grey">

    <LinearLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/msgContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:text="@string/ask_user_register_msg_save"
            android:textColor="@color/black_0"
            android:textSize="@dimen/sp_20"
            android:textStyle="normal" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topView"
        android:layout_marginTop="@dimen/dp_0_8"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="0.99"
            android:background="@drawable/wave_border_less_ripple"
            android:text="@string/no"
            android:textColor="@color/black_0"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="@dimen/dp_0_8"
            android:layout_height="match_parent"
            android:background="@color/white_grey" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/positiveBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_marginStart="@dimen/dp_0_8"
            android:layout_weight="0.999"
            android:background="@drawable/wave_border_less_ripple"
            android:text="@string/yes"
            android:textColor="@color/blue_6"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>
</RelativeLayout>