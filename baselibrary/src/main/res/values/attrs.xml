<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CEditText">
        <attr name="height" format="dimension" />
        <attr name="count" format="integer" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="focusLineColor" format="color" />
        <attr name="stokesColor" format="color" />
        <attr name="focusStokeColor" format="color" />
        <attr name="spaceWidth" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="circleRadius" format="dimension" />
        <attr name="circleColor" format="color" />
        <attr name="isDrawCircle" format="boolean" />
        <attr name="isDrawLine" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WaveView">
      <attr name="type" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SwitchView">
        <attr name="switch_bg_color" format="color" />
        <attr name="switch_ball_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="switchOpenImage" format="reference"/>
        <attr name="switchCloseImage" format="reference"/>
        <attr name="switchStatus">
            <enum name="open" value="0"/>
            <enum name="close" value="1"/>
        </attr>
    </declare-styleable>

</resources>