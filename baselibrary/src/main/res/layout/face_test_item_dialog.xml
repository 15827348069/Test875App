<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_line"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/dialog_bg"
        android:gravity="center"
        android:hint="请填写测试姓名"
        android:inputType="text"
        android:lines="1"
        android:maxLength="5"
        android:padding="@dimen/dp_8"
        android:textColor="@color/black_0"
        android:textColorHint="@color/middlePurple"
        android:textSize="@dimen/sp_17" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_gray"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/noBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_0_5"
            android:layout_weight="0.99"
            android:background="@drawable/btn_press_bg"
            android:gravity="center"
            android:text="@string/no"
            android:textColor="@color/black_0"
            android:textSize="@dimen/sp_18" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/yesBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_0_5"
            android:layout_weight="0.99"
            android:background="@drawable/btn_press_bg"
            android:gravity="center"
            android:text="@string/yes"
            android:textColor="@color/middlePurple"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>
</LinearLayout>