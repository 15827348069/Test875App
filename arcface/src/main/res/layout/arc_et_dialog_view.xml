<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_line">

    <LinearLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/nameEt"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:hint="@string/arc_please_input_register_name"
            android:inputType="text"
            android:maxLines="6"
            android:textColor="@color/black_0"
            android:textColorHint="@color/pinkColor"
            android:textSize="@dimen/sp_17"
            android:theme="@style/MyEditText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/topView"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="0.999"
            android:background="@drawable/btn_press_bg"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black_0"
            android:textSize="@dimen/sp_17" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/positionBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_weight="0.999"
            android:background="@drawable/btn_press_bg"
            android:gravity="center"
            android:text="@string/arc_register"
            android:textColor="@color/blue_5"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

</RelativeLayout>